<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:orientation="vertical"
    android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
    tools:context="com.tuandat.calculator.MainActivity">

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4f4f4f"
        android:paddingLeft="10dp"

        android:paddingRight="10dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@android:color/white"
        android:textSize="48sp" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/grExpression"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="#6a6a6a"
        tools:context=".GridXMLActivity">

        <TextView
            android:id="@+id/tvExpression"
            android:layout_width="match_parent"
            android:layout_height="36dp"

            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/btnBackSpace"
            android:gravity="center_vertical|right"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/btnBackSpace"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            app:srcCompat="@android:drawable/ic_input_delete" />


    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:rowCount="5"
        >

        <Button
            android:id="@+id/btnAC"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="1dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="#3e3e3e"
            android:text="AC"
            android:onClick="btnAC_Click"
            android:textColor="@android:color/white"
            android:textSize="48sp" />

        <Button
            android:id="@+id/btnPercent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="1dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="#3e3e3e"
            android:text="%"
            android:onClick="btnPercent_Click"
            android:textColor="@android:color/white"
            android:textSize="48sp" />

        <Button
            android:id="@+id/btnDiv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="1dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="#3e3e3e"
            android:onClick="btnOperator_Click"
            android:text="/"
            android:textColor="@android:color/white"
            android:textSize="48sp" />

        <Button
            android:id="@+id/btnMultiply"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="1dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="#3e3e3e"
            android:onClick="btnOperator_Click"
            android:text="x"
            android:textColor="@android:color/white"
            android:textSize="48sp" />

        <Button
            android:id="@+id/btnNum7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="1dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:background="#606973"
            android:onClick="btnNum_Click"
            android:text="7"
            android:textColor="@android:color/white"
            android:textSize="48sp" />

        <Button
            android:id="@+id/btnNum8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="1dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:background="#606973"
            android:onClick="btnNum_Click"
            android:text="8"
            android:textColor="@android:color/white"
            android:textSize="48sp" />

        <Button
            android:id="@+id/btnNum9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="1dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:background="#606973"
            android:onClick="btnNum_Click"
            android:text="9"
            android:textColor="@android:color/white"
            android:textSize="48sp" />

        <Button
            android:id="@+id/btnSubtract"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="1dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:background="#3e3e3e"
            android:onClick="btnOperator_Click"
            android:text="-"
            android:textColor="@android:color/white"
            android:textSize="48sp" />


        <Button
            android:id="@+id/btnNum4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="1dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:background="#606973"
            android:onClick="btnNum_Click"
            android:text="4"
            android:textColor="@android:color/white"
            android:textSize="48sp" />

        <Button
            android:id="@+id/btnNum5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="1dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:background="#606973"
            android:onClick="btnNum_Click"
            android:text="5"
            android:textColor="@android:color/white"
            android:textSize="48sp" />

        <Button
            android:id="@+id/btnNum6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="1dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:background="#606973"
            android:onClick="btnNum_Click"
            android:text="6"
            android:textColor="@android:color/white"
            android:textSize="48sp" />

        <Button
            android:id="@+id/btnPlus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="1dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:background="#3e3e3e"
            android:onClick="btnOperator_Click"
            android:text="+"
            android:textColor="@android:color/white"
            android:textSize="48sp" />


        <Button
            android:id="@+id/btnNum1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="1dp"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:background="#606973"
            android:onClick="btnNum_Click"
            android:text="1"
            android:textColor="@android:color/white"
            android:textSize="48sp" />

        <Button
            android:id="@+id/btnNum2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="1dp"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:background="#606973"
            android:onClick="btnNum_Click"
            android:text="2"
            android:textColor="@android:color/white"
            android:textSize="48sp" />

        <Button
            android:id="@+id/btnNum3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="1dp"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:background="#606973"
            android:onClick="btnNum_Click"
            android:text="3"
            android:textColor="@android:color/white"
            android:textSize="48sp" />

        <Button
            android:id="@+id/btnEqual"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="1dp"
            android:layout_row="3"
            android:layout_rowSpan="2"
            android:layout_rowWeight="1"
            android:background="#ff2f00"
            android:text="="
            android:onClick="btnEqual_Click"
            android:textColor="@android:color/white"
            android:textSize="48sp" />


        <Button
            android:id="@+id/btnNum0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="1dp"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:background="#606973"
            android:onClick="btnNum_Click"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="48sp" />

        <Button
            android:id="@+id/btnDot"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="1dp"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:background="#606973"
            android:text="."
            android:onClick="btnDot_Click"
            android:textColor="@android:color/white"
            android:textSize="48sp" />

        <Button
            android:id="@+id/btnNegative"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="1dp"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:background="#606973"
            android:text="+/-"
            android:onClick="btnNegative_Click"
            android:textColor="@android:color/white"
            android:textSize="48sp" />

    </GridLayout>


</LinearLayout>
